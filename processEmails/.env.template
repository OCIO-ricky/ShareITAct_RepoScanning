# Outlook IMAP Settings
OUTLOOK_IMAP_SERVER="outlook.office365.com"
OUTLOOK_IMAP_PORT="993"

# Credentials for the account that will perform the login (must have delegate access to the target mailbox if different)
OUTLOOK_SERVICE_ACCOUNT_EMAIL_ADDRESS="your_authenticating_service_account_email@yourdomain.com"
OUTLOOK_SERVICE_ACCOUNT_PASSWORD="password_for_authenticating_service_account"

# Target mailbox to scan (e.g., a shared mailbox like shareit@cdc.gov). Leave blank to scan the service account's own mailbox.
TARGET_MAILBOX_EMAIL_TO_SCAN="email_address_of_mailbox_to_scan@yourdomain.com"

# Outlook SMTP Settings (for forwarding)
OUTLOOK_SMTP_SERVER="smtp.office365.com"
OUTLOOK_SMTP_PORT="587"

# CSV File Path
PRIVATEID_MAPPINGS_CSV_PATH="output/privateid_mapping.csv"

# Mailbox Folders
IMAP_MAILBOX_TO_CHECK="INBOX"
IMAP_PROCESSED_FOLDER="ProcessedRequests"
IMAP_MANUAL_REVIEW_FOLDER="NeedsManualReview"

# Optional: Specific the subject line to target.  Use [privateid] as a placeholder for the ID.
# If set, only emails matching this subject pattern will be processed for ID extraction.
# Example: TARGET_SUBJECT="Request for source code repository: [privateid]"
TARGET_SUBJECT="Request for source code repository: [privateid]"
# if you leave TARGET_SUBJECT= blank or comment it out, the script will use the old method of searching for 
# any known privateid in the subject line.